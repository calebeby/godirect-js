{
  "name": "@calebeby/godirect",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsup src/godirect/godirect.ts --format esm,cjs --dts",
    "type:watch": "tsc --watch",
    "preview": "vite preview",
    "knip": "knip",
    "lint": "biome check --write",
    "lint:check": "biome check",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    "require": {
      "types": "./dist/godirect.d.cts",
      "default": "./dist/godirect.cjs"
    },
    "default": {
      "types": "./dist/godirect.d.ts",
      "default": "./dist/godirect.js"
    }
  },
  "types": "./dist/godirect.d.ts",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.0.10",
    "knip": "^5.61.3",
    "tsup": "^8.5.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.4"
  },
  "dependencies": {
    "@types/w3c-web-hid": "^1.0.6",
    "@types/web-bluetooth": "^0.0.20"
  }
}
